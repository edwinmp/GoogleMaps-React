<?xml version="1.0" encoding="utf-8" ?>
<widget id="GoogleMaps.widget.GoogleMaps" needsEntityContext="true"
    xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../xsd/widget.xsd">
    <name>GoogleMaps</name>
    <description>Google Maps</description>

    <icon />

    <properties>
        <!-- Appearance -->
        <property key="width" type="integer" required="true" defaultValue="0">
            <caption>Width</caption>
            <category>Appearance</category>
            <description>Map width in px. 0 = 100%</description>
        </property>
        <property key="height" type="integer" required="true" defaultValue="0">
            <caption>Height</caption>
            <category>Appearance</category>
            <description>Map height in px. 0 = auto</description>
        </property>
        <!-- Google -->
        <property key="apiKey" type="string" required="false" defaultValue="">
            <caption>API Key</caption>
            <category>Google</category>
            <description>Your google maps api key</description>
        </property>
        <!-- Behavior -->
        <property key="onChangeMicroflow" type="microflow" required="false" defaultValue="">
            <caption>Microflow</caption>
            <category>Behavior</category>
            <description>The microflow to execute on change.</description>
            <returnType type="Boolean" />
        </property>
    </properties>
</widget>

